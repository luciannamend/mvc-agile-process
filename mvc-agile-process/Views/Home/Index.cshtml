@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    @* Welcome Message *@
    <h1 class="display-4">Welcome to Movie App 🎬 </h1>
    <p class="lead mt-3">Create and manage your favorite movies with ease.</p>
    <hr class="my-4" />

    <div class="row justify-content-center mt-4">
        <div class="col-md-4 mb-3">
            @* View all movies btn *@
            <a class="btn btn-primary btn-lg btn-block" asp-area="" asp-controller="Movies">View All Movies</a>
        </div>
        <div class="col-md-4 mb-3">
             @* Create new movie btn *@
            <a class="btn btn-success btn-lg btn-block" asp-area="" asp-controller="Movies" asp-action="Create">Add New Movie</a>
        </div>
    </div>

    <div class="mt-5">
        <small class="text-muted">Your personal movie manager — powered by ASP.NET Core MVC</small>
    </div>
</div>
